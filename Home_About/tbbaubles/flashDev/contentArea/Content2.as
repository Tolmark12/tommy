import contentArea.Content;class contentArea.Content2 extends Content{		private var _delayInterval:Number;	public function Content2( $photoBox, 							  $textBox,							  $imagePath )	{		super($photoBox, $textBox, $imagePath);	}		// Called from : "ClickHandler.as" and "Doc_home.as"	// Also called from "Doc_home.as" to load default images	// this call passes "true" on the $bool so the photo box	// doesn't slide over yet.	public function loadImages( $xmlObj:Object,							    $bool:Boolean,							 	$imagesName:String)	{		var images:Object = $xmlObj[$imagesName];				if( images == undefined ) 		{			super.hide();			return null;		}				// Set transition speed if defined		if( images.transitionSpeed != undefined ) 			photoBox.setTransitionSpeed( Number(images.transitionSpeed) );				// Set display time if defined		if( images.displayTime != undefined ) 			photoBox.setShowTime( Number(images.displayTime) );						super.dontSlidePhotoBoxYet 	= ($bool)? true : false ;		photoAr 				= images.list.split(',');		photoArLen 				= photoAr.length;		currentIndex 			= -1;				// If there is a delay before the start of the slideshow		if( images.delay != undefined ) 		{			_delayInterval = setInterval(						function($this, $cbFunc)			{				clearInterval($this._delayInterval)				$this[$cbFunc]();			},			 			Number(images.delay) * 1000, 			this, 			"loadNextImage");		}		else		{			loadNextImage();		}			}	}