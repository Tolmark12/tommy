class PathFinder{	static private var xmlPath:String;	static private var imagePath:String;	static private var swfPath:String;	static private var mp3Path:String;	static private var movieWidth:Number;	static private var movieHeight:Number;		public function setPaths ( $xml:String, $image:String, $swf:String, $mp3:String ):Void	{		xmlPath 	= $xml;		imagePath	= $image;		swfPath 	= $swf;		mp3Path		= $mp3;	}		public static  function getXmlPath	 (  ):String{ return xmlPath; };	public static  function getImagePath (  ):String{ return imagePath; };	public static  function getSwfPath   (  ):String{ return swfPath; };	public static  function getMp3Path	 (  ):String{ return mp3Path; };	public static  function getMovWidth  (  ):Number{ return movieWidth; };	public static  function getMovHeight (  ):Number{ return movieHeight; };				public static  function setGlobals   ( $glbls:Object ):Void	{		movieWidth =  Number($glbls.w);		movieHeight = Number($glbls.h);	};}