import contentArea.PhotoBoximport contentArea.TextBox;import scroller.ContentScroller;import PathFinder;class contentArea.Content{	public var photoBox:PhotoBox;	public var textBox:TextBox;	public var imagePath:String;	public var photoAr:Array;	public var photoArLen:Number;	public var currentIndex:Number;	private static var dontSlidePhotoBoxYet:Boolean;		public function Content( $photoBox, 							 $textBox,							 $imagePath )	{		photoBox = $photoBox;		textBox = $textBox;		imagePath = $imagePath;	}		// Called from : "ClickHandler.as" and "Doc_home.as"	// Also called from "Doc_home.as" to load default images	// this call passes "true" on the $bool so the photo box	// doesn't slide over yet.	public function loadImages( $xmlObj:Object,							    $bool:Boolean )	{		dontSlidePhotoBoxYet = ($bool)? true : false ;		photoAr = $xmlObj.images.list.split(',');		photoArLen = photoAr.length;		currentIndex = -1;		loadNextImage();	}		public function loadNextImage ( $bool:Boolean ):Void	{		var ind:Number = ( currentIndex < photoArLen-1 )? currentIndex + 1 : 0 ;		var tempAr:Array = photoAr[ind].split('*');		var image:String = tempAr[0];		var imagePan:String;		var imageLink:String				var len:Number = tempAr.length;		for ( var i:Number=1; i<len; i++ ) 		{			var str = tempAr[i]			if( tempAr[i].charAt(0) == '[' )			{				// Strip out the brackets. ex: [http://www.delorum.com]  - becomes -  http://www.delorum.com				imageLink = tempAr[i].slice(1, tempAr[i].length - 1);			}			else			{				imagePan = tempAr[i];			}		}		photoBox.loadImage ( imagePath + image, imagePan, imageLink, this, 'loadNextImage' );		currentIndex = ind;	}		public function loadText ( $xmlObj ):Void	{		textBox.setText('<div>' + $xmlObj.text + '</div>');	}		public function setImageBoxSize ( $wid:Number, $tal:Number ):Void	{		photoBox.drawMaskSquare($wid, $tal);	}		public static function mayIslideThePhotoBox (  ):Boolean	{		return !dontSlidePhotoBoxYet;	}		public function hide (  ):Void	{		photoBox._x = 3333333;		photoBox._visible = false;		textBox._visible = false;	}}